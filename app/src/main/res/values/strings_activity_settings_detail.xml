<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">
	<string name="title_activity_settings_detail">Settings</string>

	<!-- Strings related to General Settings PreferenceActivity-->
	<!-- Location -->
	<string name="pref_location_label">Location</string>
	<string name="pref_location_default" translatable="false">94043</string>
	<string name="pref_location_key" translatable="false">location</string>

	<!-- Pick your units -->
	<string name="pref_units_label">Pick your units</string>
	<string name="pref_units_label_metric">Metric</string>
	<string name="pref_units_label_imperial">Imperial</string>
	<string name="pref_units_default" translatable="false">@string/pref_units_label_metric</string>
	<!--Key name for temperature unit preference in SharedPreferences-->
	<string name="pref_units_key" translatable="false">units</string>

	<string name="pref_units_metric">metric</string>
	<string name="pref_units_imperial">imperial</string>

	<string-array name="pref_units_values">
		<item>@string/pref_units_metric</item>
		<item>@string/pref_units_imperial</item>
	</string-array>

	<string-array name="pref_units_options">
		<item>@string/pref_units_label_metric</item>
		<item>@string/pref_units_label_imperial</item>
	</string-array>

	<string name="pref_last_notification">last_notification</string>

	<!-- Windspeed formats -->
	<string name="format_wind_mph">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> mph <xliff:g
		id="direction">%2$s</xliff:g></string>
	<string name="format_wind_kmh">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> km/h <xliff:g
		id="direction">%2$s</xliff:g></string>
	<string name="format_pressure">Pressure: <xliff:g id="pressure">%1.0f</xliff:g> hPa</string>
	<string name="format_humidity">Humidity: <xliff:g id="humidity">%1.0f</xliff:g> %%</string>

</resources>
