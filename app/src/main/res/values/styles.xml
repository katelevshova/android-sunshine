<resources>

	<!-- Base application theme. -->
	<style name="SunshineAppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarStyle">@style/SunshineActionBar</item>
		<item name="dropDownListViewStyle">@style/PopupMenuListView</item>
		<item name="colorPrimary">@color/sunshine_blue</item>
		<item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
		<!-- OverFlow Menu Text Color -->
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="SunshineAppTheme" parent="SunshineAppTheme.Base">
	</style>

	<!-- main activity action bar styles -->
	<style name="SunshineActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
		<item name="background">@color/sunshine_blue</item>
		<item name="icon">@mipmap/art_clear</item>
		<item name="displayOptions">showTitle|showHome|useLogo</item>
		<item name="titleTextStyle">@style/TitleActionBar</item>
	</style>

	<style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
		<item name="android:background">@color/sunshine_blue</item>
		<item name="android:divider">@color/white</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="android:textAppearance">@style/SansSerifCondensed.White</item>
	</style>

	<style name="SansSerifLight" >
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<style name="SansSerifCondensed" >
		<item name="android:fontFamily">sans-serif-condensed</item>
	</style>

	<!-- For MainForecastFragment and its list_item_forecast_today elements-->

	<style name="SansSerifLight.White">
		<item name="android:textColor">@color/tc_today_item</item>
	</style>

	<style name="SansSerifCondensed.White" >
		<item name="android:textColor">@color/tc_today_item</item>
	</style>

	<style name="SansSerifLight.White.Max">
		<item name="android:textSize">@dimen/ts_max_temp_today</item>
	</style>

	<style name="SansSerifLight.White.Min" >
		<item name="android:textSize">@dimen/ts_min_temp_today</item>
	</style>

	<style name="SansSerifCondensed.White.General" >
		<item name="android:textSize">@dimen/ts_general_info</item>
	</style>

	<style name="TitleActionBar" parent="SansSerifCondensed.White.General">
		<item name="android:textStyle">italic|bold</item>
	</style>

	<!-- For MainForecastFragment and its list_item_forecast elements-->

	<style name="SansSerifCondensed.Black" >
		<item name="android:textColor">@color/tc_general</item>
	</style>

	<style name="SansSerifCondensed.Black.General" >
		<item name="android:textSize">@dimen/ts_general_info</item>
	</style>

	<style name="SansSerifCondensed.Grey" >
		<item name="android:textColor">@color/tc_additional</item>
	</style>

	<style name="SansSerifCondensed.Grey.GeneralMainForeccast" >
		<item name="android:textSize">@dimen/ts_additional_info</item>
	</style>

	<!-- For DetailFragment -->
	<style name="SansSerifLight.Black" >
		<item name="android:textColor">@color/tc_general</item>
	</style>

	<style name="SansSerifLight.Black.Max" >
		<item name="android:textSize">@dimen/ts_max_temp_details</item>
	</style>

	<style name="SansSerifLight.Grey" >
		<item name="android:textColor">@color/tc_additional</item>
	</style>

	<style name="SansSerifLight.Grey.Min" >
		<item name="android:textSize">@dimen/ts_min_temp_details</item>
	</style>

	<style name="SansSerifLight.General" >
		<item name="android:textSize">@dimen/ts_general_info</item>
	</style>

	<style name="SansSerifCondensed.Grey.GeneralDetails" >
		<item name="android:textSize">@dimen/ts_forecast</item>
	</style>

	<style name="ForecastListStyle">
		<item name="android:choiceMode">singleChoice</item>
	</style>
</resources>
