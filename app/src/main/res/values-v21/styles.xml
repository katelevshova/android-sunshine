<resources>

	<style name="SunshineAppTheme" parent="SunshineAppTheme.Base">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<!-- main activity action bar styles -->
	<style name="SunshineToolBar" parent="ThemeOverlay.AppCompat.Dark">
		<item name="android:background">@color/sunshine_blue</item>
		<item name="android:title">@string/app_name</item>
