<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/list_item_forecast"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@drawable/forecast_list_touch_selector"
			  android:clickable="false"
			  android:gravity="center_vertical"
			  android:minHeight="?android:attr/listPreferredItemHeight"
			  android:orientation="horizontal"
			  android:paddingLeft="@dimen/activity_vertical_margin"
			  android:paddingRight="@dimen/activity_vertical_margin">


	<ImageView android:id="@+id/detail_icon"
			   android:layout_width="@dimen/icon_listitem_size"
			   android:layout_height="@dimen/icon_listitem_size"
			   android:layout_gravity="center"
			   android:layout_marginEnd="@dimen/abc_list_item_padding_horizontal_material"
			   android:layout_marginRight="@dimen/abc_list_item_padding_horizontal_material"
			   android:adjustViewBounds="true"
			   android:src="@mipmap/art_clear"/>

	<LinearLayout android:layout_width="0dp"
				  android:layout_height="wrap_content"
				  android:layout_weight="7"
				  android:orientation="vertical">

		<TextView android:id="@+id/detail_date_day_textview"
				  style="@style/SansSerifCondensed.TC_TS_Primary"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="Tomorrow"/>

		<TextView android:id="@+id/detail_forecast_textview"
				  style="@style/SansSerifCondensed.TC_TS_Secondary"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="Clear"/>

	</LinearLayout>


	<TextView android:id="@+id/detail_high_textview"
			  style="@style/SansSerifLight.TC_Primary"
			  android:textSize="@dimen/forecast_text_size"
			  android:layout_width="@dimen/forecast_text_width"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center"
			  android:layout_marginEnd="@dimen/forecast_temperature_space"
			  android:layout_marginRight="@dimen/forecast_temperature_space"
			  android:gravity="right"
			  android:text="81°"/>

	<TextView android:id="@+id/detail_low_textview"
			  style="@style/SansSerifLight.TC_Secondary"
			  android:textSize="@dimen/forecast_text_size"
			  android:layout_width="@dimen/forecast_text_width"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center"
			  android:gravity="right"
			  android:text="30°"/>

</LinearLayout>