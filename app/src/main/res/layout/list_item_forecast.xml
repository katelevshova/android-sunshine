<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/list_item_forecast"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@drawable/forecast_list_touch_selector"
			  android:clickable="false"
			  android:gravity="center_vertical"
			  android:minHeight="?android:attr/listPreferredItemHeight"
			  android:orientation="horizontal"
			  android:paddingRight="@dimen/activity_vertical_margin">

	<FrameLayout android:layout_width="@dimen/today_item_left_margin"
				 android:layout_height="wrap_content">

		<ImageView android:id="@+id/list_item_icon"
				   android:layout_width="@dimen/icon_listitem_size"
				   android:layout_height="@dimen/icon_listitem_size"
				   android:layout_gravity="center"
				   android:src="@mipmap/art_clear"/>
	</FrameLayout>

	<LinearLayout android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_weight="1"
				  android:orientation="vertical">

		<TextView android:id="@+id/list_item_date_textview"
				  style="@style/SansSerifCondensed.Black.General"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="Tomorrow"/>

		<TextView android:id="@+id/list_item_forecast_textview"
				  style="@style/SansSerifCondensed.Grey.GeneralMainForeccast"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="Clear"/>

	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_weight="0"
				  android:gravity="center_horizontal"
				  android:orientation="vertical">

		<TextView android:id="@+id/list_item_high_textview"
				  style="@style/SansSerifCondensed.Black.General"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="81°"/>

		<TextView android:id="@+id/list_item_low_textview"
				  style="@style/SansSerifCondensed.Grey.GeneralMainForeccast"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:text="30°"/>

	</LinearLayout>

</LinearLayout>