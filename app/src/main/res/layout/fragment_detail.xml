<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="@dimen/activity_vertical_margin"
			tools:context=".DetailActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>

		<!-- Header: Day, Date -->
		<TextView
			android:id="@+id/detail_day_textview"
			style="@style/SansSerifCondensed.Black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Tomorrow"
			android:textSize="@dimen/ts_details_today_header"/>
		<TextView
			android:id="@+id/detail_date_textview"
			style="@style/SansSerifCondensed.Grey"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="June 24"
			android:textSize="@dimen/ts_details_date"/>

		<!-- Main content: high, low, art, weather state -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/activity_horizontal_margin"
			android:orientation="horizontal"
			>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:orientation="vertical">

				<TextView
					android:id="@+id/detail_high_textview"
					style="@style/SansSerifLight.Black.Max"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="21°"/>
				<TextView
					android:id="@+id/detail_low_textview"
					style="@style/SansSerifLight.Grey.Min"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="11°"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="0"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/detail_icon"
					android:layout_width="@dimen/icon_details_size"
					android:layout_height="@dimen/icon_details_size"
					android:src="@mipmap/art_clear"/>
				<TextView
					android:id="@+id/detail_forecast_textview"
					style="@style/SansSerifCondensed.Grey.PrimaryDetails"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Clear"/>
			</LinearLayout>
		</LinearLayout>

		<!-- Humidity, wind, pressure -->
		<TextView
			android:id="@+id/detail_humidity_textview"
			style="@style/SansSerifLight.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/details_humidity_margin"
			android:layout_marginTop="@dimen/details_humidity_margin"
			android:text="Humidity: 48%"/>

		<TextView
			android:id="@+id/detail_wind_textview"
			style="@style/SansSerifLight.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/details_humidity_margin"
			android:text="Wind: 6 km/h NW"/>

		<TextView
			android:id="@+id/detail_pressure_textview"
			style="@style/SansSerifLight.Primary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Pressure: 1014 hPa"/>

	</LinearLayout>

</ScrollView>
