<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	android:id="@+id/detail_additional_pane"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/detail_accent_pane_background"
	android:paddingBottom="@dimen/abc_list_item_padding_horizontal_material"
	android:paddingEnd="@dimen/detail_horizontal_padding"
	android:paddingLeft="@dimen/detail_horizontal_padding"
	android:paddingRight="@dimen/detail_horizontal_padding"
	android:paddingStart="@dimen/detail_horizontal_padding"
	android:paddingTop="@dimen/abc_list_item_padding_horizontal_material"
	app:columnCount="2">

	<Space
		app:layout_columnSpan="2"
		app:layout_rowWeight="1"/>

	<!-- 1st row - humidity-->
	<TextView
		android:id="@+id/detail_humidity_label_text_view"
		style="@style/SansSerifLight.TC_Tertiary_TS_Primary"
		android:gravity="center_vertical"
		app:layout_columnWeight="1"
		app:layout_gravity="fill_horizontal"
		android:text="@string/humidity"/>

	<TextView
		android:id="@+id/detail_humidity_textview"
		style="@style/SansSerifLight.TC_White.TS_Primary"
		android:gravity="center_vertical"
		app:layout_columnWeight="1"
		app:layout_gravity="fill_horizontal"
		android:text="48%"/>

	<!-- 2nd row - Wind -->
	<TextView
		android:id="@+id/detail_wind_label_textview"
		style="@style/SansSerifLight.TC_Tertiary_TS_Primary"
		android:gravity="center_vertical"
		android:text="@string/wind"/>

	<TextView
		android:id="@+id/detail_wind_textview"
		style="@style/SansSerifLight.TC_White.TS_Primary"
		android:gravity="center_vertical"
		android:text="6 km/h NW"/>

	<!-- 3rd row - Pressure-->
	<TextView
		android:id="@+id/detail_pressure_label_textview"
		style="@style/SansSerifLight.TC_Tertiary_TS_Primary"
		android:gravity="center_vertical"
		android:text="@string/pressure"/>
	<TextView
		android:id="@+id/detail_pressure_textview"
		style="@style/SansSerifLight.TC_White.TS_Primary"
		android:gravity="center_vertical"
		android:text="1014 hPa"/>

	<Space
		app:layout_columnSpan="2"
		app:layout_rowWeight="1"/>

</android.support.v7.widget.GridLayout>