<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:gravity="center_vertical"
			  android:orientation="vertical"
			  android:background="@color/detail_accent_pane_background"
			  android:paddingLeft="@dimen/detail_horizontal_padding"
			  android:paddingRight="@dimen/detail_horizontal_padding">

	<TextView
		android:id="@+id/detail_humidity_label_text_view"
		style="@style/SansSerifLight.TC_Tertiary_TS_Primary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/humidity"/>

	<TextView
		android:id="@+id/detail_humidity_textview"
		style="@style/SansSerifLight.TC_White.TS_HumidityValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="48%"/>

	<TextView
		android:id="@+id/detail_wind_label_textview"
		style="@style/SansSerifLight.TC_Tertiary_TS_Primary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/wind"/>

	<TextView
		android:id="@+id/detail_wind_textview"
		style="@style/SansSerifLight.TC_White.TS_HumidityValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="6 km/h NW"/>

	<TextView
		android:id="@+id/detail_pressure_label_textview"
		style="@style/SansSerifLight.TC_Tertiary_TS_Primary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/pressure"/>
	<TextView
		android:id="@+id/detail_pressure_textview"
		style="@style/SansSerifLight.TC_White.TS_HumidityValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="1014 hPa"/>
</LinearLayout>