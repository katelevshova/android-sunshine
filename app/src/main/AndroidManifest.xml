<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hally.sunshine" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:title="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainForecastActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".view.MainForecastActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainForecastActivity" />
        </activity>
        <activity
            android:name=".view.SettingsDetailActivity"
            android:title="@string/title_activity_settings_detail"
            android:parentActivityName=".view.DetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainForecastActivity" />
        </activity>
    </application>

</manifest>
